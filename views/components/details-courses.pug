mixin dropdown()
    each val, key in domains
        .card
            #heading1.card-header
                .mb-0.d-flex.justify-content-between.align-items-center
                    button.btn.font-medium(data-toggle="collapse" data-target="#collapse1")= key
                    span.badge.badge-primary.badge-pill.font-medium= val.length
            #collapse1.collapse.show(data-parent="#accordion")
                .card-body.p-0
                    each course in val
                        .border-bottom.cursor-pointer.p-2.font-medium.text-primary= course.course_name







